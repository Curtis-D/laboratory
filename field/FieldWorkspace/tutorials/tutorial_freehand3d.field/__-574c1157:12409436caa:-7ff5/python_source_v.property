string>from field.core.plugins.drawing.tweak import Freehand3dUtils

utils = Freehand3dUtils(_self)

_self.lines.clear()

# you can edit this code to manipulate the lines that you have drawn
for r in _self.rawSplineData:
	ll = PLine(utils.projectAtZeroPoint(r))(hiddenControls=1)	
	ll(color=Vector4(0,0,0,0.7),thickness=1)
	_self.lines.add(ll)
 
_self.tweaks()

