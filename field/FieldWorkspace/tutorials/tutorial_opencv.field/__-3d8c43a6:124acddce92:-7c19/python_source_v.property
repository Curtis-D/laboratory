def updateATexture():
	# we read an image from the camera
	opencv.read()

	# and we copy it into our texture map
	data.rewind()
	data.put(opencv.image().pixels)
	data.rewind()
	
	# remembering to tell Field that it needs to send the texture to the graphics card again
	texture.dirty()

_r = updateATexture

